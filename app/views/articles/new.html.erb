<h1>Create a new Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <div>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  </div>
  <div>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  </div>

  <%= f.submit %>
  <% end %>